---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <title>Donaciones</title>

  <div
    class="bg-cover bg-center min-h-screen flex items-center justify-center p-4 mt-20"
    style="background-image: url('/images/fondo.jpg');"
  >
    <div class="flex flex-col md:flex-row items-center justify-center gap-6 max-w-5xl w-full bg-opacity-90 rounded-xl p-4 md:p-6 shadow-xl">

      <!-- Imagen del QR -->
      <div class="w-full max-w-xs h-auto flex-shrink-0">
        <img src="/images/QR DE PRUEBA.png" alt="Código QR" class="w-full h-full object-contain rounded-lg border border-gray-300" />
      </div>

      <!-- Tarjeta de información -->
      <div class="w-full max-w-md bg-red-100 rounded-xl relative text-white shadow-2xl transition-transform transform hover:scale-105 overflow-hidden">
        <img class="relative object-cover w-full h-full rounded-xl" src="https://i.imgur.com/kGkSg1v.png" />

        <div class="w-full px-4 md:px-8 absolute top-6 md:top-8">
          <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2 sm:gap-0">
            <div>
              <p class="font-light">Nombre</p>
              <p class="font-medium tracking-widest">Fundación Renaced</p>
            </div>
            <!-- Logo de Bancolombia -->
            <img class="w-32 sm:w-36 h-10 object-contain" src="/images/Logo_Bancolombia2.png" alt="Bancolombia" />
          </div>

          <div class="pt-4">
            <p class="font-light">Número de cuenta</p>
            <p class="font-medium tracking-wider text-lg">4642 3489 9867 7632</p>
          </div>

          <div class="pt-6 pr-6">
            <div class="flex flex-col sm:flex-row justify-between gap-4">
              <div>
                <p class="font-light text-xs">Cédula de Ciudadanía</p>
                <p class="font-medium tracking-wider text-sm">1043765292</p>
              </div>
              <div>
                <p class="font-light text-xs">Tipo de Cuenta</p>
                <p class="font-medium tracking-wider text-sm">AHORROS BANCOLOMBIA</p>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
</Layout>
