---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <title>Donaciones</title>

  <div
    class="bg-cover bg-center min-h-screen flex items-center justify-center p-4 mt-20"
    style="background-image: url('/images/fondo.jpg');"
  >
    <div class="flex flex-col md:flex-row items-center justify-center gap-6 max-w-5xl w-full bg-opacity-90 rounded-xl p-4 md:p-6 shadow-xl">

      <!-- Imagen del QR -->
      <div class="w-full max-w-xs h-auto flex-shrink-0">
        <img src="/images/QR DE PRUEBA.png" alt="Código QR" class="w-full h-full object-contain rounded-lg border border-gray-300" />
      </div>

      <!-- Tarjeta de información -->
      <div class="w-full max-w-md relative rounded-xl shadow-2xl overflow-hidden transition-transform transform hover:scale-105">
        <!-- Imagen de fondo -->
        <img class="absolute inset-0 w-full h-full object-cover" src="https://i.imgur.com/kGkSg1v.png" alt="Fondo" />

        <!-- Capa oscura para contraste -->
        <div class="absolute inset-0 bg-black bg-opacity-40"></div>

        <!-- Contenido -->
        <div class="relative z-10 text-white px-4 md:px-8 py-6 space-y-4">
          <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2 sm:gap-0">
            <div>
              <p class="text-sm font-light">Nombre</p>
              <p class="text-lg font-semibold tracking-wider">Fundación Renaced</p>
            </div>
            <img class="w-32 sm:w-36 h-10 object-contain" src="/images/Logo_Bancolombia2.png" alt="Bancolombia" />
          </div>

          <div>
            <p class="text-sm font-light">Número de cuenta</p>
            <p class="text-lg font-semibold tracking-wider">4642 3489 9867 7632</p>
          </div>

          <div class="flex flex-col sm:flex-row justify-between gap-4">
            <div>
              <p class="text-xs font-light">Cédula de Ciudadanía</p>
              <p class="text-sm font-medium tracking-wider">1043765292</p>
            </div>
            <div>
              <p class="text-xs font-light">Tipo de Cuenta</p>
              <p class="text-sm font-medium tracking-wider">AHORROS BANCOLOMBIA</p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
</Layout>
